<div class="col mb-5">
  <div class="card h-100">
    <!-- Sale badge-->
    <% if product.is_on_sale %>
      <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
    <% end %>
    <!-- Product image-->
    <%= link_to product_path(product) do %>
      <% if product.image.attached? %>
        <%= image_tag product.image, class: "card-img-top", alt: product.name %>
      <% else %>
        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="<%= product.name %>" />
      <% end %>
    <% end %>
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder">
          <%= link_to product.name, product_path(product), class: "text-decoration-none text-dark" %>
        </h5>
        <!-- Product price-->
        <% if product.original_price.present? && product.is_on_sale %>
          <span class="text-muted text-decoration-line-through">¥<%= number_with_delimiter(product.original_price) %></span>
          ¥<%= number_with_delimiter(product.price) %>
        <% else %>
          ¥<%= number_with_delimiter(product.price) %>
        <% end %>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <button class="btn btn-outline-dark mt-auto">カートに追加</button>
      </div>
    </div>
  </div>
</div>
