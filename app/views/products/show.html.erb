<!-- Product section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <% if @product.image.attached? %>
          <%= image_tag @product.image, class: "card-img-top mb-5 mb-md-0", alt: @product.name %>
        <% else %>
          <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="<%= @product.name %>" />
        <% end %>
      </div>
      <div class="col-md-6">
        <div class="small mb-1">SKU: <%= @product.sku %></div>
        <h1 class="display-5 fw-bolder"><%= @product.name %></h1>
        <div class="fs-5 mb-5">
          <% if @product.original_price.present? && @product.is_on_sale %>
            <span class="text-decoration-line-through">¥<%= number_with_delimiter(@product.original_price) %></span>
            <span>¥<%= number_with_delimiter(@product.price) %></span>
          <% else %>
            <span>¥<%= number_with_delimiter(@product.price) %></span>
          <% end %>
        </div>
        <p class="lead"><%= @product.description %></p>
        <div class="d-flex">
          <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
          <button class="btn btn-outline-dark flex-shrink-0" type="button">
            <i class="bi-cart-fill me-1"></i>
            カートに追加
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4">関連商品</h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @related_products.each do |related_product| %>
        <%= render 'product_card', product: related_product %>
      <% end %>
    </div>
  </div>
</section>
